{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Transform": "AWS::Serverless-2016-10-31",
    "Description": "AWS Serverless Microservice",
    "Resources": {
        "TelemetryApiGatewayToSqsRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "apigateway.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": "TelmetryApiGatewayToSqsPolicy",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "sqs:SendMessage"
                                    ],
                                    "Resource": {
                                        "Fn::GetAtt": [
                                            "TelemetryQueue",
                                            "Arn"
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "TelemetryTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "TableName": "Telemetry-Store",
                "AttributeDefinitions": [
                    {
                        "AttributeName": "siteId",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "siteId",
                        "KeyType": "HASH"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": 5,
                    "WriteCapacityUnits": 5
                }
            }
        },
        "DeadLetterQueue": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "QueueName": "TelemetryDLQ"
            }
        },
        "TelemetryQueue": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "QueueName": "TelemetryQueue",
                "RedrivePolicy": {
                    "deadLetterTargetArn": {
                        "Fn::GetAtt": "DeadLetterQueue.Arn"
                    },
                    "maxReceiveCount": 3
                }
            }
        },
        "TelemetryLambdaLayer": {
            "Type": "AWS::Serverless::LayerVersion",
            "Properties": {
                "ContentUri": "./helpers-layer",
                "CompatibleRuntimes": [
                    "nodejs20.x"
                ],
                "Description": "custom Lambda Layer with aws-sdk",
                "LayerName": "CustomLayer-For-aws-sdk"
            }
        },
        "TelemetryProcessorFunction": {
            "Type": "AWS::Serverless::Function",
            "Properties": {
                "CodeUri": "./Telemetry",
                "Handler": "index.handler",
                "Runtime": "nodejs20.x",
                "MemorySize": 128,
                "Timeout": 10,
                "Layers": [
                    {
                        "Ref": "TelemetryLambdaLayer"
                    }
                ],
                "Environment": {
                    "Variables": {
                        "TABLE_NAME": {
                            "Ref": "TelemetryTable"
                        }
                    }
                },
                "Policies": [
                    {
                        "DynamoDBCrudPolicy": {
                            "TableName": {
                                "Ref": "TelemetryTable"
                            }
                        }
                    }
                ],
                "Events": {
                    "SQSEvent": {
                        "Type": "SQS",
                        "Properties": {
                            "Queue": {
                                "Fn::GetAtt": "TelemetryQueue.Arn"
                            },
                            "Enabled": true,
                            "FunctionResponseTypes": [
                                "ReportBatchItemFailures"
                            ]
                        }
                    }
                }
            },
            "Metadata": {
                "BuildMethod": "esbuild",
                "BuildProperties": {
                    "Target": "es2022",
                    "EntryPoints": [
                        "index.ts"
                    ],
                    "Bundle": true,
                    "External": [
                        "aws-sdk"
                    ]
                }
            }
        },
        "TelemetryApi": {
            "Type": "AWS::Serverless::Api",
            "Properties": {
                "StageName": "Prod",
                "DefinitionBody": {
                    "openapi": "3.0",
                    "info": {
                        "title": "Telemetry API",
                        "version": "1.0"
                    },
                    "schemes": [
                        "https"
                    ],
                    "paths": {
                        "/telemetry/{siteId}": {
                            "post": {
                                "responses": {
                                    "200": {
                                        "description": "200 response",
                                        "content": {
                                            "application/json": {
                                                "schema": {
                                                    "$ref": "#/components/schemas/Empty"
                                                }
                                            }
                                        }
                                    }
                                },
                                "x-amazon-apigateway-integration": {
                                    "uri": {
                                        "Fn::Sub": "arn:${AWS::Partition}:apigateway:${AWS::Region}:sqs:path/${AWS::AccountId}/${TelemetryQueue.QueueName}"
                                    },
                                    "httpMethod": "POST",
                                    "type": "aws",
                                    "passthroughBehavior": "never",
                                    "credentials": {
                                        "Fn::GetAtt": [
                                            "TelemetryApiGatewayToSqsRole",
                                            "Arn"
                                        ]
                                    },
                                    "requestParameters": {
                                        "integration.request.header.Content-Type": "'application/x-www-form-urlencoded'"
                                    },
                                    "requestTemplates": {
                                        "application/json": "Action=SendMessage&MessageBody={\"siteId\": \"$input.params('siteId')\",\"telemetry\": $input.body}"
                                    },
                                    "responses": {
                                        "default": {
                                            "statusCode": 200
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "Outputs": {
        "ApiEndpoint": {
            "Description": "API Gateway endpoint URL",
            "Value": {
                "Fn::Sub": "https://${TelemetryApi}.execute-api.${AWS::Region}.amazonaws.com/Prod/telemetry/{siteId}"
            }
        }
    }
}