{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "typeRoots": ["./node_modules/@types"],
      "lib": ["ES2020"]
    },
    "include": ["src/**/*.ts", "src/index.ts.old"],
    "exclude": ["node_modules", "dist"]
  }
  